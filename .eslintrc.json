{
  "extends": ["airbnb-base", "prettier"],

  "env": {
    "mocha": true
  },

  "plugins": ["prettier"],

  "globals": {
    "artifacts": false,
    "contract": false,
    "assert": false,
    "web3": false
  },

  "rules": {
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "prettier/prettier": "error"
  }
}
